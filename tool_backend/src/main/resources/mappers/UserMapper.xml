<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.tool_backend.user.mapper.UserMapper">
    <select id="selectByUsername" resultType="cn.tedu.tool_backend.user.pojo.vo.UserVO">
        SELECT id,username,password,email,phone,age,gender,create_time,update_time,status,level,parent_id
        FROM user WHERE username=#{username}
    </select>

    <insert id="insert">
        INSERT INTO user(username,password,email,phone,age,gender,create_time,status,level,parent_Id)
        VALUES(#{username},#{password},#{email},#{phone},#{age},#{gender},#{createTime},#{status},#{level},#{parentId})
    </insert>

    <select id="selectUser" resultType="cn.tedu.tool_backend.user.pojo.vo.UserVO">
        SELECT
            id,username,password,email,phone,age,gender,create_time,status,level,parent_Id
        FROM user
        <where>
            <if test="username!=null and username !=''">
                username LIKE CONCAT('%',#{username},'%')
            </if>
            <if test="id!=null and id!=''">
                AND id=#{id}
            </if>
            <if test="parentId!=null and parentId !=''">
                AND parent_id=#{parentId}
            </if>
            <if test="status!=null and status!=''">
                AND status=#{status}
            </if>
            <if test="level!=null and level !=''">
                AND level=#{level}
            </if>
        </where>
    </select>

    <update id="update">
        UPDATE user
        <set>
            <if test="password!=null and password !=''">password=#{password},</if>
            <if test="email!=null and email !=''">email=#{email},</if>
            <if test="level!=null and level !=''">level=#{level},</if>
            <if test="parentId!=null and parentId !=''">parent_id=#{parentId},</if>
            <if test="age!=null and age !=''">age=#{age},</if>
            <if test="gender!=null and gender !=''">gender=#{gender},</if>
            <if test="status!=null and status !=''">status=#{status},</if>
            <if test="updateTime!=null">update_time=#{updateTime}</if>
        </set>
        WHERE id=#{id}
    </update>

    <delete id="deleteById">
        DELETE FROM user WHERE id = #{userId}
    </delete>

    <select id="selectById" resultType="cn.tedu.tool_backend.user.pojo.vo.UserVO">
        SELECT id,username,password,email,phone,age,gender,create_time,update_time,status,level,parent_id
        FROM user WHERE id=#{id}
    </select>



</mapper>