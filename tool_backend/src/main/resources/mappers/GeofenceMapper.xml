<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.tool_backend.geofence.mapper.GeofenceMapper">
    <select id="selectGeofence" resultType="cn.tedu.tool_backend.geofence.pojo.vo.GeofenceVO">
        SELECT id,name,status,position,create_time
        FROM geofence
        <where>
            <if test="id!=null">
                AND id=#{id}
            </if>
            <if test="name!=null and name!=''">
                AND name LIKE CONCAT('%',#{name},'%')
            </if>
            <if test="status!=null and status!=''">
                AND status=#{status}
            </if>
        </where>
    </select>

    <insert id="insert">
        INSERT INTO geofence(name,status,position,create_time)
        VALUES(#{name},#{status},#{position},#{createTime})
    </insert>

    <update id="update">
        UPDATE geofence
    <set>
        <if test="status!=null and status!=''">status=#{status},</if>
        <if test="updateTime!=null">update_time=#{updateTime}</if>
    </set>
        WHERE id=#{id}
    </update>

    <delete id="deleteById">
        delete from geofence where id=#{id}
    </delete>
</mapper>



